<idea-plugin>
    <id>org.cyberline.openhab2</id>
    <name>Openhab2 Support</name>
    <vendor email="openhab@quadrat4.de" url="https://github.com/CyberLine/openhab2-support">Alexander Over</vendor>

    <description><![CDATA[
        Openhab2 Home Automation System Filesupport and Syntax Highlighting<br /><br />
        <a href="https://www.openhab.org/">OpenHab Homepage</a>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Openhab2 Items File" implementationClass="org.intellij.sdk.language.ItemsFileType"
                  fieldName="INSTANCE" language="Items" extensions="items"/>
        <fileType name="Openhab2 Things File" implementationClass="org.intellij.sdk.language.ThingsFileType"
                  fieldName="INSTANCE" language="Things" extensions="things"/>
        <fileType name="Openhab2 Persist File" implementationClass="org.intellij.sdk.language.PersistFileType"
                  fieldName="INSTANCE" language="Persist" extensions="persist"/>
        <fileType name="Openhab2 Rules File" implementationClass="org.intellij.sdk.language.RulesFileType"
                  fieldName="INSTANCE" language="Rules" extensions="rules"/>
        <fileType name="Openhab2 Scripts File" implementationClass="org.intellij.sdk.language.ScriptsFileType"
                  fieldName="INSTANCE" language="Scripts" extensions="scripts"/>
        <fileType name="Openhab2 Services File" implementationClass="org.intellij.sdk.language.ServicesFileType"
                  fieldName="INSTANCE" language="Services" extensions="services"/>
        <fileType name="Openhab2 Sitemaps File" implementationClass="org.intellij.sdk.language.SitemapsFileType"
                  fieldName="INSTANCE" language="Sitemaps" extensions="sitemap"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>